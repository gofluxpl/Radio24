<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0D0D0D"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/radio_card"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageButton
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:background="@null"
                tools:ignore="UseAppTint"
                android:contentDescription="przycisk menu"
                android:scaleType="fitCenter"
                android:src="@drawable/radio24_trans" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sprawdzam połączenie z internetem:"
                android:textSize="14sp"
                android:textColor="#fefefe"
                android:gravity="center"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/statusTextAwiat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/statusTextFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="5sp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:background="@null"
                tools:ignore="UseAppTint"
                android:contentDescription="przycisk menu"
                android:scaleType="fitCenter"
                android:src="@drawable/stackflow_branding" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>